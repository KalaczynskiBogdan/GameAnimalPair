<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    tools:context=".game.VictoryDialogFragment">

    <ImageView
        android:id="@id/ivMedal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_medal"
        app:layout_constraintEnd_toStartOf="@id/tvVictory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCamel" />

    <ImageView
        android:id="@+id/ivCamel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camel"
        app:layout_constraintEnd_toEndOf="@id/ivMedal"
        app:layout_constraintStart_toStartOf="@id/ivMedal"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivTrophy"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_trophy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvVictory"
        app:layout_constraintTop_toTopOf="@id/tvVictory" />

    <TextView
        android:id="@+id/tvVictory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton_regular"
        android:text="@string/congratulations"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@id/ivTrophy"
        app:layout_constraintStart_toEndOf="@+id/ivMedal"
        app:layout_constraintTop_toTopOf="@id/ivMedal" />

    <ImageView
        android:id="@+id/ivHome"
        android:layout_marginTop="28dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVictory"
        android:background="@color/dark_green"
        />


</androidx.constraintlayout.widget.ConstraintLayout>