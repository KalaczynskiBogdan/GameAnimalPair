<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_background_forest"
    tools:context=".home.HomeFragment">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/anton_regular"
        android:padding="20dp"
        android:text="@string/find_the_same_pair_of_animals"
        android:textColor="@color/dark_green"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_camel"
        app:layout_constraintBottom_toBottomOf="@id/imageFind"
        app:layout_constraintEnd_toEndOf="@id/imageFind"
        app:layout_constraintStart_toStartOf="@+id/imageFind"
        app:layout_constraintTop_toTopOf="@id/imageFind" />

    <ImageView
        android:id="@+id/imageFind"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/ic_find"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton_regular"
        android:text="@string/start_the_game"
        android:textColor="@color/brown"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivPlay"/>


</androidx.constraintlayout.widget.ConstraintLayout>